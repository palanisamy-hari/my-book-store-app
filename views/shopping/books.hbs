{{# each books }}
    <div class="row">
        {{# each this }}
            <div class="col-lg-4 col-sm-12 col-md-4">
                <div class="thumbnail">
                    <img src="{{ this.imagePath }}" alt="..."
                         class="img-responsive rounded mx-auto d-block" style="border:1px solid #ddd;border-radius: 4px; width: 400px;height: 400px;">
                    <div class="caption">
                        <h3>{{this.title}}</h3>
                        <p class="description">{{ this.description }}</p>
                        <div class="clearfix">
                            <div class="price pull-left">${{ this.price }}</div>
                            <a href="/add-to-cart/{{this._id}}" class="btn btn-default pull-right btn-primary" role="button">Add
                                to Cart</a>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
{{/each}}